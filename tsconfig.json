{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "sourceMap": true,
    "target": "es6",
    "jsx": "react-jsx",
    "allowJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "experimentalDecorators": true,
  },
  "include": [
    "examples/**/*.ts*",
    "src/**/**/**/*.ts*",
  ],
  "exclude": [
  "src/**/**/**/*_.ts*",
    "__tests__/*"
  ]
}
